            padding: 20px 30px;
            border-radius: 15px;
            color: white;
            font-size: 0.9em;
            display: flex;
            align-items: center;
            gap: 10px;
            animation: fadeIn 1.5s ease;
        }

        .feature i {
            font-size: 1.5em;
        }

        /* Animations */
        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .brand-name {
