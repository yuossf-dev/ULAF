@model List<EntityFrameWork_Pro.Models.Item>

@{
    ViewData["Title"] = "Found Items";
    Layout = null;
    var lang = Context.Request.Cookies["Language"] ?? "en";
    var isArabic = lang == "ar";
    var dir = isArabic ? "rtl" : "ltr";
}

<!DOCTYPE html>
<html lang="@lang" dir="@dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(isArabic ? "الأغراض الموجودة - ULAF" : "Found Items - ULAF")</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: @(isArabic ? "'Cairo', sans-serif" : "'Poppins', sans-serif");
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }

        .header {
            background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
            color: white;
            padding: 25px 30px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .header-icon {
            font-size: 2.5em;
        }

        h1 {
            font-size: 2em;
            font-weight: 600;
        }

        .header p {
            font-size: 0.95em;
            opacity: 0.9;
            margin-top: 5px;
        }

        .header-right {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .lang-btn {
            background: rgba(255,255,255,0.2);
            border: 2px solid rgba(255,255,255,0.3);
            color: white;
            padding: 8px 18px;
            border-radius: 20px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
        }

        .lang-btn:hover {
            background: rgba(255,255,255,0.3);
        }

        .btn {
            padding: 12px 25px;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.25);
        }

        .btn-back {
            background: white;
            color: #27ae60;
        }

        .btn-post {
            background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
            color: white;
            margin-bottom: 30px;
            font-size: 1.05em;
        }

        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .items-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 30px;
        }

        .item-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s;
            overflow: hidden;
        }

        .item-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
        }

        .item-image-container {
            width: 100%;
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
        }

        .item-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .item-icon-placeholder {
            font-size: 5em;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }

        .item-content {
            padding: 25px;
        }

        .item-card h3 {
            color: #333;
            font-size: 1.5em;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .item-info {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-bottom: 15px;
        }

        .info-row {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #666;
            font-size: 0.95em;
        }

        .info-row i {
            color: #27ae60;
            width: 20px;
        }

        .info-row strong {
            color: #333;
        }

        .item-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 15px;
            border-top: 2px solid #f0f0f0;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 18px;
            border-radius: 20px;
            font-size: 0.9em;
            font-weight: 600;
            background: #d5f4e6;
            color: #27ae60;
        }

        .category-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 14px;
            border-radius: 15px;
            font-size: 0.85em;
            font-weight: 600;
            background: #f0f0f0;
            color: #666;
        }

        .no-items {
            text-align: center;
            padding: 100px 20px;
        }

        .no-items i {
            font-size: 5em;
            color: #ddd;
            margin-bottom: 20px;
        }

        .no-items h2 {
            color: #999;
            font-size: 1.5em;
            margin-bottom: 10px;
        }

        .no-items p {
            color: #bbb;
            font-size: 1.1em;
        }

        @@media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                text-align: center;
            }

            .items-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="header-content">
            <div class="header-left">
                <i class="fas fa-check-circle header-icon"></i>
                <div>
                    <h1>@(isArabic ? "الأغراض الموجودة" : "Found Items")</h1>
                    <p>@(isArabic ? "وجدت شيئاً؟ انشره هنا ليتمكن الآخرون من العثور عليه!" : "Found something? Post it here so others can find it!")</p>
                </div>
            </div>
            <div class="header-right">
                <form asp-controller="Home" asp-action="SetLanguage" method="post" style="display: inline;">
                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                    <button type="submit" name="lang" value="@(isArabic ? "en" : "ar")" class="lang-btn">
                        <i class="fas fa-globe"></i>
                        @(isArabic ? "English" : "عربي")
                    </button>
                </form>
                <a asp-action="AllItems" class="btn btn-back">
                    <i class="fas fa-arrow-@(isArabic ? "right" : "left")"></i>
                    @(isArabic ? "رجوع" : "Back")
                </a>
            </div>
        </div>
    </div>

    <div class="container">
        <a asp-action="Create" asp-route-status="Found" class="btn btn-post">
            <i class="fas fa-plus"></i>
            @(isArabic ? "الإبلاغ عن غرض موجود" : "Report a Found Item")
        </a>

        @if (Model != null && Model.Any())
        {
            <div class="items-grid">
                @foreach (var item in Model)
                {
                    <div class="item-card">
                        <div class="item-image-container" style="background: @item.CategoryColor;">
                            @if (item.HasImages)
                            {
                                <img src="@item.FirstImage" alt="@item.Name" class="item-image" />
                            }
                            else
                            {
                                <div class="item-icon-placeholder">
                                    <i class="@item.CategoryIcon"></i>
                                </div>
                            }
                        </div>
                        <div class="item-content">
                            <h3>@item.Name</h3>
                            <div class="item-info">
                                <div class="info-row">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span><strong>@(isArabic ? "موقع العثور:" : "Found at:")</strong> @item.Location</span>
                                </div>
                                <div class="info-row">
                                    <i class="fas fa-calendar"></i>
                                    <span><strong>@(isArabic ? "التاريخ:" : "Date:")</strong> @item.Date.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="info-row">
                                    <i class="fas fa-user"></i>
                                    <span><strong>@(isArabic ? "نشر بواسطة:" : "Posted by:")</strong> @item.PosterName</span>
                                </div>
                            </div>
                            <div class="item-footer">
                                <span class="status-badge">
                                    <i class="fas fa-check-circle"></i>
                                    @(isArabic ? "موجود" : "Lost")
                                </span>
                                <span class="category-badge">
                                    <i class="@item.CategoryIcon"></i>
                                    @item.Category
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-items">
                <i class="fas fa-box-open"></i>
                <h2>@(isArabic ? "لا توجد موجودات" : "No Found Items")</h2>
                <p>@(isArabic ? "لم يتم الإبلاغ عن أي موجودات بعد." : "No Found Items reported yet.")</p>
            </div>
        }
    </div>
</body>
</html>
