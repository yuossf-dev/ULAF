<!DOCTYPE html>
@{
    var lang = Context.Request.Cookies["Language"] ?? "en";
    var isArabic = lang == "ar";
    var dir = isArabic ? "rtl" : "ltr";
}
<html lang="@lang" dir="@dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ULAF</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EntityFrameWork_Pro.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body { font-family: @(isArabic ? "'Cairo', sans-serif" : "'Poppins', sans-serif"); }
        .navbar { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important; box-shadow: 0 4px 15px rgba(0,0,0,0.2); padding: 1rem 2rem; }
        .navbar-brand { font-size: 1.8em !important; font-weight: 700 !important; color: white !important; letter-spacing: 2px; }
        .navbar-brand i { font-size: 1.2em; margin-@(isArabic ? "left" : "right"): 10px; }
        .nav-link { color: rgba(255,255,255,0.9) !important; font-weight: 500; margin: 0 10px; }
        .nav-link:hover { color: white !important; }
        .btn-nav { padding: 8px 25px; border-radius: 25px; font-weight: 600; border: 2px solid white; color: white !important; margin-@(isArabic ? "right" : "left"): 10px; }
        .btn-nav:hover { background: white; color: #667eea !important; }
        footer { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white !important; padding: 2rem 0; }
        footer a { color: rgba(255,255,255,0.8); }
        .lang-switcher { position: relative; }
        .lang-btn { background: rgba(255,255,255,0.2); border: none; color: white; padding: 8px 15px; border-radius: 20px; cursor: pointer; font-weight: 600; transition: all 0.3s; }
        .lang-btn:hover { background: rgba(255,255,255,0.3); }
        .lang-btn i { margin-@(isArabic ? "left" : "right"): 5px; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Welcome"><i class="fas fa-search"></i>ULAF</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-info-circle"></i> @(isArabic ? "من نحن" : "About Us")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Items" asp-action="Index">
                                <i class="fas fa-box-open"></i> @(isArabic ? "الأغراض" : "Items")
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item lang-switcher">
                            <form asp-controller="Home" asp-action="SetLanguage" method="post" style="display: inline;">
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" name="lang" value="@(isArabic ? "en" : "ar")" class="lang-btn">
                                    <i class="fas fa-globe"></i>
                                    @(isArabic ? "English" : "عربي")
                                </button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-nav" asp-area="" asp-controller="User" asp-action="Login">
                                <i class="fas fa-sign-in-alt"></i> @(isArabic ? "تسجيل الدخول" : "Login")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-nav" asp-area="" asp-controller="User" asp-action="SignUp">
                                <i class="fas fa-user-plus"></i> @(isArabic ? "إنشاء حساب" : "Sign Up")
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center">
        <div class="container">
            <p class="mb-0">&copy; 2025 - @(isArabic ? "نظام المفقودات الجامعي (ULAF)" : "ULAF (University Lost And Found)") - <a asp-area="" asp-controller="Home" asp-action="Privacy">@(isArabic ? "الخصوصية" : "Privacy")</a></p>
            <p class="mb-0 mt-2" style="font-size: 0.9em; opacity: 0.8;"><i class="fas fa-graduation-cap"></i> @(isArabic ? "نربط الطلاب، نجد المفقودات" : "Connecting Students, Finding Belongings")</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
